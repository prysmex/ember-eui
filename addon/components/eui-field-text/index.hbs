{{#let
  (class-names
    (if @icon "euiFieldText--withIcon")
    (if @fullWidth "euiFieldText--fullWidth")
    (if @compressed "euiFieldText--compressed")
    (if (or @prepend @append) "euiFieldText--inGroup")
    (if @isLoading "euiFieldText--isLoading")
    "euiFieldText"
  ) as |classes|
}}
  {{#if @controlOnly}}
    <input
      id={{@id}}
      class={{classes}}
      value={{@value}}
      type="text"
      ...attributes
      {{validatable-control @isInvalid}}
    />
  {{else}}
    <EuiFormControlLayout
      @icon={{@icon}}
      @fullWidth={{@fullWidth}}
      @isLoading={{@isLoading}}
      @compressed={{@compressed}}
      @readOnly={{@readOnly}}
      @prepend={{@prepend}}
      @append={{@append}}
      @inputId={{@id}}
    >
      <input
        id={{@id}}
        class={{classes}}
        value={{@value}}
        type="text"
        ...attributes
        {{validatable-control @isInvalid}}
      />
    </EuiFormControlLayout>
  {{/if}}
{{/let}}