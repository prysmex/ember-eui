{{#if @legend}}
  <EuiFormFieldset @legend={{@legend}} @compressed={{@compressed}}>
    {{#each @options key="id" as |option|}}
      <EuiRadio
        class={{concat "euiRadioGroup__item" option.className}}
        @checked={{eq @idSelected option.id}}
        @disabled={{or @disabled option.disabled}}
        @compressed={{@compressed}}
        @label={{option.label}}
        {{on "change" (fn @onChange option.id option.value)}}
      />
    {{/each}}
  </EuiFormFieldset>
{{else}}
  <div ...attributes>
    {{#each @options key="id" as |option|}}
      <EuiRadio
        class={{concat "euiRadioGroup__item" option.className}}
        @name={{@name}}
        @checked={{eq @idSelected option.id}}
        @disabled={{or @disabled option.disabled}}
        @compressed={{@compressed}}
        @label={{option.label}}
        {{on "change" (fn @onChange option.id option.value)}}
      />
    {{/each}}
  </div>
{{/if}}