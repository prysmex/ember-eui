<EuiForm
  @tagName="form"
  {{on "submit" (fn this.handleSubmit @changeset)}}
  {{on "reset" (fn this.handleReset @changeset)}}
  {{did-insert this.validate}}
>
  <:content>
    <EuiChangesetForm::Context @changeset={{@changeset}} as |Context|>
      {{yield
        (hash
          FieldText=(component
            Context.FieldText
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldTextArea=(component
            Context.FieldTextArea
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldPassword=(component
            Context.FieldPassword
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldRadio=(component
            Context.FieldRadio
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldCheckbox=(component
            Context.FieldCheckbox
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldSwitch=(component
            Context.FieldSwitch
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldRadioGroup=(component
            Context.FieldRadioGroup
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldCheckboxGroup=(component
            Context.FieldCheckboxGroup
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldDualRangeSlider=(component
            Context.FieldDualRangeSlider
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldRangeSlider=(component
            Context.FieldRangeSlider
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          NumberField=(component
            Context.FieldNumber
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
          FieldSelect=(component
            Context.FieldSelect
            fullWidth=@fullWidth
            hasSubmitted=this.hasSubmitted
          )
        )
        @changeset
        this.hasSubmitted
      }}
    </EuiChangesetForm::Context>
  </:content>
</EuiForm>